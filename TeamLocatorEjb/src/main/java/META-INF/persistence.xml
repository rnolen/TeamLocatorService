<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="teamDB" transaction-type="RESOURCE_LOCAL">
		<class>com.geocent.teamdb.entity.Location</class>
		<class>com.geocent.teamdb.entity.Member</class>
		<class>com.geocent.teamdb.entity.Mission</class>
		<class>com.geocent.teamdb.entity.MissionTeam</class>
		<class>com.geocent.teamdb.entity.Objective</class>
		<class>com.geocent.teamdb.entity.Team</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/teamDB;upgrade=true"/>
			<property name="javax.persistence.jdbc.user" value="user"/>
			<property name="javax.persistence.jdbc.password" value="pwd"/>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
		</properties>
	</persistence-unit>
</persistence>
